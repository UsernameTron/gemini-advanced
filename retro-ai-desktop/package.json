{
  "name": "retro-ai-desktop",
  "version": "1.0.0",
  "description": "1970s AI Command Center with Gemini & Imagen Integration",
  "main": "dist/main/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron dist/main/main.js",
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\" \"wait-on dist/main/main.js && electron dist/main/main.js\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "tsc -p tsconfig.renderer.json --watch",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "mkdir -p dist/renderer && cp -r src/renderer/* dist/renderer/",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "ai",
    "gemini",
    "imagen",
    "1970s",
    "terminal",
    "desktop"
  ],
  "author": "CP Connor",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.3",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.18.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.8.0",
    "typescript": "^5.3.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.7.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "multer": "^2.0.1",
    "socket.io": "^4.7.4",
    "ws": "^8.14.2"
  },
  "build": {
    "appId": "com.cpconnor.retro-ai-desktop",
    "productName": "Retro AI Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "dmg": {
      "title": "Retro AI Desktop",
      "background": "assets/dmg-background.png"
    }
  }
}
